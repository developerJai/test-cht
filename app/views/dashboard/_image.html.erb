 <!-- Full Screen Modal -->
<div id="image-modal-<%=msg.id%>" attr-modal="image-modal-<%=msg.id%>" data-action="click->chats#closeImageModal" class="fixed inset-0 flex items-center justify-center bg-gray-900 bg-opacity-75 hidden">
  <div class="bg-white w-full h-full flex flex-col">
    <div class="p-4 border-b flex justify-between items-center" >
      <button class="text-gray-500 hover:text-gray-700" >Close</button>
    </div>
    <div class="flex-grow p-4 overflow-auto">
      <!-- Modal content -->
      <img src="<%=msg.image%>" style="width: 100%;">
    </div>
  </div>
</div>